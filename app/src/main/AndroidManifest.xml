<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.colorbuddy">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".Groups.NewItemActivity" />
        <activity android:name=".Groups.DeleteItemsActivity" />
        <activity android:name=".Groups.GroupItemsActivity" />
        <activity android:name=".Groups.AddGroupActivity" />
        <activity android:name=".Groups.GroupsActivity" />
        <activity android:name=".Inventory.TotalItemsActivity" />
        <activity android:name=".ItemChecker" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>